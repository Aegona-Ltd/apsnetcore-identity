@model AuthSystem.Models.EmpDeptViewModel
@{
    ViewData["Title"] = "Edit emp to dept";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Department name: @Model.Name</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="DeptId" />
                    <div class="row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <div class="form-group">
                                <label asp-for="Emps"></label>
                                <div class="card" style="height: 200px; overflow-y: scroll; overflow-x: hidden; width: 100%;">
                                    <div class="card-body">
                                        @{
                                            foreach (var item in ViewBag.a)
                                            {
                                                <p>@item</p>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Employees"></label>
                                <select asp-for="Employees" asp-items="@Model.Employees" class="form-control" style="height: 200px;"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-info">Update</button>
                        <a asp-action="DepartmentList" class="btn btn-secondary ml-1">Cancel</a>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>
