@model AuthSystem.Models.EmpDeptViewModel
@{
    ViewData["Title"] = "Add department";
}
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Department name: @Model.Name</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="DeptId" />
                    <div class="form-group">
                        <label asp-for="Employees"></label>
                        <select asp-for="Employees" asp-items="@Model.Employees" class="form-control"></select>
                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <a asp-action="DepartmentList" class="btn btn-secondary ml-1">Cancel</a>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>
</div>